<!DOCTYPE html>
<html>
<head>
  <title>RubyBelt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>
<h1>Welcome To The Organization Site!</h1>
<% if current_user %>
<div id='header'>
    <p>Hi <%= current_user.first_name.capitalize %>!</p>
    <a href="<%= sessions_path%>"><button>Dashboard</button></a>
    <a href="<%= session_path(current_user.id) %>" data-method='delete'><button>Log Out</button></a>
</div>
<% end %> 
<%= yield %>

</body>
</html>
